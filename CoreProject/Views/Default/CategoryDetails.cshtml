
@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>MVC CORE Category Detail Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <style>

        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }

        footer {
            background-color: #f2f2f2;
            padding: 25px;
        }

        .carousel-inner img {
            width: 100%;
            margin: auto;
            min-height: 200px;
        }
        
        body{
            font-family: Georgia, Verdana, serif;
        }

        .DefIndexProduct{
            font-family: Garamond, "Times New Roman", serif;
            
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/Default/Index">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="~/Contact.html">Contact</a></li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Login/Index"> <span class="glyphicon glyphicon-log-in"> </span> <span style="color:royalblue;font-weight:bold">Sign Up</span> to access Admin Panel.  </a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="max-width: 100%;height:100%;margin-top:10px">

        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div style="width: auto; text-align:center;" class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="/images/carouselphoto-1.jpg" alt="Image" style="width: 900px;">
                <div class="carousel-caption">
                    <h3>Handmade</h3>
                    <p>Top Quality</p>
                </div>
            </div>
            <div class="item">
                <img  src="/images/carouselphoto-2.jpg" alt="Image" style="width: 900px;">
                <div class="carousel-caption">
                    <h3>Handmade</h3>
                    <p>Top Quality</p>
                </div>
            </div>
            <div class="item">
                <img src="/images/carouselphoto-3.jpg" alt="Image" style="width: 900px;">
                <div class="carousel-caption">
                    <h3>Handmade</h3>
                    <p>Top Quality</p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <br />

    @await Component.InvokeAsync("CategoryGetList")

    <br />
    <div class="DefIndexProduct" style=" margin-left: 37%;
        margin-bottom: 5%">
            <h1 style="margin-left:17%"><b>Products</b></h1>
            <br />
        </div>
    <div>
        

        @await Component.InvokeAsync("ItemListByCategory",new {id=ViewBag.x})
       
        
    </div>
    <footer class="container-fluid text-center">
        <p>Footer Text</p>
    </footer>
</body>
</html>